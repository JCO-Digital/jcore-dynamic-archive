<label
	class="wp-block-jcore-dynamic-archive-filters__radio {{ term.active ? 'is-active' : '' }}"
	for="taxonomy-{{ instanceId }}-{{ term.type }}-{{ term.id }}{{ term.isChild ? '-child' : '' }}"
	data-wp-on-async--mouseover="actions.prefetchFilter"
>
	{{ term.name }}
</label>
<input
	type="radio"
	id="taxonomy-{{ instanceId }}-{{ term.type }}-{{ term.id }}{{ term.isChild ? '-child' : '' }}"
	name="taxonomy-{{ instanceId }}-{{ taxonomy.name }}{{ term.isChild ? '-child' : '' }}"
	value="{{ attribute(term, taxonomy_field_type) }}"
	data-wp-on-async--change="actions.filterChange"
	{% if term.active %}
		data-active
	{% endif %}
	data-taxonomy="{{ term.type }}"
	data-filter-type="{{ term.filterType }}"
	data-term="{{ attribute(term, taxonomy_field_type) }}"
	data-is-child="{{ term.isChild }}"
	{% if term.active %}
		checked="checked"
	{% endif %}
	class="wp-block-jcore-dynamic-archive-filters__radio__input"
/>
